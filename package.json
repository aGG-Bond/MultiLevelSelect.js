{
  "name": "multi-level-select",
  "version": "1.0.0",
  "description": "多级选择组件 - 支持TypeScript的现代化版本",
  "main": "dist/MultiLevelSelect.js",
  "module": "dist/MultiLevelSelect.esm.js",
  "types": "dist/types/MultiLevelSelect.d.ts",
  "browser": "dist/MultiLevelSelect.min.js",
  "scripts": {
    "build": "rollup -c && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "rollup -c -w",
    "watch:types": "tsc --watch --emitDeclarationOnly",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docs": "echo \"生成文档\"",
    "lint": "eslint src/**/*.ts src/**/*.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "select",
    "multi-level",
    "component",
    "ui",
    "typescript",
    "javascript",
    "modular"
  ],
  "author": "Developer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/multi-level-select.git"
  },
  "bugs": {
    "url": "https://github.com/username/multi-level-select/issues"
  },
  "homepage": "https://github.com/username/multi-level-select#readme",
  "directories": {
    "doc": "docs",
    "example": "demo",
    "lib": "src"
  },
  "files": [
    "dist/",
    "src/",
    "docs/",
    "README.md"
  ],
  "devDependencies": {
    "typescript": "^5.0.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0"
  }
}